{% extends 'base.jinja' %}

{% set root_dir, page_title = '../', hymn.title %}

{% block main %}
  <div>
    <h2>{{ hymn.title }}</h2>
    <dl>
      <dt>Authors</dt>
      <dd>{{ hymn.authors }}</dd>
      <dt>Year</dt>
      <dd>{{ hymn.year }}</dd>
      <dt>Example Text</dt>
      <dd>{{ hymn.firstLine or '' }}...{{ hymn.refrainFirstLine or '' }}</dd>
      <dt>Popularity</dt>
      <dd>{{ hymn.popularity }}%</dd>
      <dd>
      {% if hymn.scriptureRefs is iterable %}
      <dt>Scripture References</dt>
      <dd>
      <details>
      <summary>Show</summary>
      <ul>
      {% for ref in hymn.scriptureRefs %}
      <li>{{ ref }}</li>
      {% endfor %}
      </ul>
      </details>
      </dd>
      {% endif %}
      <dt>Lyrics</dt>
      <dd><blockquote>{{ hymn.text or "Lyrics for this song are unavailable." }}</blockquote></dd>
      <dt>More Information</dt>
      <dd><a href="https://hymnary.org/text/{{ hymn.titleId }} ">hymnary.org</a></dd>
    </dl> 
  </div>
{% endblock %}