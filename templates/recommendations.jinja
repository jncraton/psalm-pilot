{% extends 'base.jinja' %}

{% set page_title = 'Recommendations' %}

{% block script %}
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
{% endblock script %} 

{% block main %}
  <h2>Recommendations</h2>
  <div class="filters">

    <div class="textbox">
      <form>
        <div>
          <label for="textbox">date/time of year</label>
          <input id="time-of-year" type="text" placeholder="December 15, Advent 3">
        </div>  
        <div>  
          <label for="textbox">scripture(s)</label>
          <input id="scripture-s" type="text" placeholder="John 1:6–8, 19–28">
        </div>  
        <div> 
          <label for="textbox">sermon topic</label>
          <input id="sermon-topic" type="text" placeholder="Sermon Topic: The Light of the World">
        </div>  
        <div>  
          <label for="textbox">Your result</label>
          <textarea readonly type="text" name="textbox"></textarea>
          <input type="submit" value="Get Recommendations">
        </div>   
      </form>
    </div>

  <div class="textbox-response">
    <h2>Service Recommendation</h2>
  <div class="response-text"></div>

  </div>
{% endblock %}