<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Song pilot" />
    <link rel="stylesheet" type="text/css" href="style.css" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg">
    <link rel="manifest" href="manifest.webmanifest">
    <title>Psalm Pilot</title>
  </head>
  <body>
    <header>
      <img src="favicon.svg" alt="Psalm Pilot Logo">
      <h1>Psalm Pilot</h1>
    </header>
    <main>
      <table>
        <caption>Hymns</caption>
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publication Year</th>
            <th>Popularity</th>
          </tr>
        </thead>
        <tbody>
          {% for hymn in hymns %}
          <tr>
            <td>{{ hymn.title }}</td>
            <td>{{ hymn.authors or '' }}</td>
            <td>{{ hymn.publicationYear or '' }}</td>
            <td>{{ hymn.popularity }}%</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </main>
    <footer>
    <details><summary>Gemini Config</summary>
      <label>Gemini Key<input name="gemini-key"></label>
      <button id=set-key>Set Key</button>
      <label>Test Message<input name="gemini-msg"></label>
      <button id=chat>Test Chat</button>
      <pre id=gemini-out></pre>
    </details>
    </footer>
    <script>
      async function chat(message) {
        const url = "https://generativelanguage.googleapis.com/v1beta/models/gemini-flash-lite-latest:generateContent"
        const res = await fetch(url, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'x-goog-api-key': document.querySelector("[name=gemini-key]").value
          },
          body: JSON.stringify({
            contents: [
              {
                parts: [
                  {
                    text: message
                  }
                ]
              }
            ]
          })
        })

        const json = await res.json()

        return json.candidates[0].content.parts[0].text
      }

      document.querySelector("#set-key").addEventListener("click", e => {
        localStorage.geminiKey = e.target.value
        e.target.value = ""
      })

      document.querySelector("#chat").addEventListener("click", async e => {
        const msg = document.querySelector("[name=gemini-msg]").value || "Hi!"

        document.querySelector("#gemini-out").textContent = await chat(msg)
      })

      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('service-worker.js')
          });
      }
    </script>
  </body>
</html>
