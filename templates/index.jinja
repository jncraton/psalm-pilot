{% extends 'base.jinja' %}

{% block main %}
  <table>
    <caption><h2>Hymn Directory</h2></caption>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publication Year</th>
        <th>Popularity</th>
      </tr>
    </thead>
    <tbody>
      {% for hymn in hymns %}
      <tr>
        <td><a href="hymns/{{ hymn.titleId }}.html">{{ hymn.title }}</a></td>
        <td>{{ hymn.authors or '' }}</td>
        <td>{{ hymn.publicationYear or '' }}</td>
        <td>{{ hymn.popularity }}%</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}