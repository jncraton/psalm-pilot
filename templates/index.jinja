{% extends 'base.jinja' %}
{% block script %}<script src="{{ root_dir or '' }}main.js"></script>{% endblock script %} 
{% block header %}
<input type="search" id="search" name="search" placeholder="Search hymns..." onkeyup="search_title()" />
{% endblock header %} 

{% block main %}
  <table>
    <caption><h2>Hymn Directory</h2></caption>
    <thead>
      <tr>
        <th>Title</th>
        <th>Authors</th>
        <th>Example Text</th>
        <th>Popularity</th>
      </tr>
    </thead>
    <tbody>
      {% for hymn in hymns %}
      <tr>
        <td><a href="hymns/{{ hymn.titleId }}.html">{{ hymn.title }}</a></td>
        <td>{{ hymn.authors or '' }}</td>
        <td>{{ hymn.firstLine or '' }}...{{ hymn.refrainFirstLine or '' }}</td>
        <td>{{ hymn.popularity }}%</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
