{% extends 'base.jinja' %}

{% set root_dir, page_title = '../', hymn.title %}

{% block main %}
  <div>
    <h2>{{ hymn.title }}</h2>
    <dl>
      <dt>Author</dt>
      <dd>{{ hymn.authors }}</dd>
      <dt>Year</dt>
      <dd>{{ hymn.year }}</dd>
      <dt>Popularity</dt>
      <dd>{{ hymn.popularity }}%</dd>
      <dt>Lyrics</dt>
      <dd><blockquote>{{ hymn.text }}</blockquote></dd>
      <dt>More Information</dt>
      <dd><a href="https://hymnary.org/text/{{ hymn.titleId }}">hymnary.org</a></dd>
    </dl> 
  </div>
{% endblock %}