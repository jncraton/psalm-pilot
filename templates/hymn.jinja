{% extends 'base.jinja' %}

{% set root_dir, page_title = '../', hymn.title %}

{% block main %}
  <div>
    <h2>{{ hymn.title }}</h2>
    <dl>
      <dt>Author</dt>
      <dd>{{ hymn.authors }}</dd>
      <dt>Publication Year</dt>
      <dd>{{ hymn.publicationYear }}</dd>
      <dt>Popularity</dt>
      <dd>{{ hymn.popularity }}%</dd>
      <dt>Scripture References</dt>
      <dd>
      <dt>Show Scripture References</dt>
      <ul>
      {% for ref in hymn.scriptureRefs %}
      <li>{{ ref }}</li>
      {% endfor %}
      </ul>
      </dd>
      <dt>Lyrics</dt>
      <dd><blockquote>{{ hymn.text }}</blockquote></dd>
    </dl> 
  </div>
{% endblock %}